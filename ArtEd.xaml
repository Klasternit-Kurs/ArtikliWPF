<Window x:Class="ArtikliWPF.ArtEd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtikliWPF"
        mc:Ignorable="d"
        Title="ArtEd" Height="450" Width="800">
	<UniformGrid Columns="2">
		<Label Content="Sifra: " FontSize="42"/>
		<TextBox Text="{Binding Sifra}" FontSize="42" Width="400"/>
		<Label Content="Naziv: " FontSize="42"/>
		<TextBox Text="{Binding Naziv}" FontSize="42" Width="400"/>
		<Label Content="Ulazna cena: " FontSize="42"/>
		<TextBox Text="{Binding Ucena}" FontSize="42" Width="400"/>
		<Label Content="Marza: " FontSize="42"/>
		<TextBox Text="{Binding Marza}" FontSize="42" Width="400"/>
		<Button Content="Otkazi" FontSize="42"/>
		<Button Content="Unos" FontSize="42"/>
	</UniformGrid>

</Window>
